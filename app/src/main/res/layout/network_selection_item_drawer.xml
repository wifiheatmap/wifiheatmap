<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ssid_label_drawer"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:text="CIA Surveillance Van"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/wifi_strength_drawer"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:contentDescription="@string/wifi_strength_description"/>
        <!---->app:srcCompat="@drawable/ic_signal_wifi_3_bar_black_24dp"

</LinearLayout>